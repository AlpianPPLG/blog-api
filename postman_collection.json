		{
			"name": "Posts",
			"item": [
				{
					"name": "Get All Posts",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/posts?page=1&limit=10",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "posts"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						}
					}
				},
				{
					"name": "Get Post by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/posts/{{post_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "posts", "{{post_id}}"]
						}
					}
				},
				{
					"name": "Create Post",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"My First Post\",\n  \"content\": \"This is the content of my first post. It contains some interesting information about Go programming.\",\n  \"tags\": [\"golang\", \"api\", \"tutorial\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/posts",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "posts"]
						}
					}
				},
